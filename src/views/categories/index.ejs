<div class="row mb-4">
    <div class="col">
        <h1 class="display-4">Product Categories</h1>
        <p class="lead">Browse our product categories</p>
    </div>
</div>

<div class="row">
    <% if (categories && categories.length > 0) { %>
        <% categories.forEach(category => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title"><%= category.name %></h3>
                        <p class="card-text"><%= category.description %></p>
                        <p class="text-muted"><%= category.products ? category.products.length : 0 %> products</p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a href="/categories/<%= category.category_id %>" class="btn btn-primary w-100">
                            Browse Products
                        </a>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col">
            <div class="alert alert-info">
                No categories available.
            </div>
        </div>
    <% } %>
</div>